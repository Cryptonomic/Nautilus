FROM postgres:10.3-alpine

ARG CONSEILDB_USER
ARG CONSEILDB_PASSWORD
ARG CONSEILDB_DBNAME

ENV POSTGRES_USER=$CONSEILDB_USER
ENV POSTGRES_PASSWORD=$CONSEILDB_PASSWORD
ENV POSTGRES_DB=$CONSEILDB_DBNAME
ENV POSTGRES_INITDB_ARGS="--nosync --lc-collate=C"


COPY ./conseil.sql /docker-entrypoint-initdb.d/conseil.sql

EXPOSE 5432
